{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es5",
    "lib": ["es6", "dom"],
    "declaration": true,
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "src/test/**/*"]
}
